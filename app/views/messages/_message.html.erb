<div class="messages">
  <div class="name-date">
    <div class="name">
      <%= message.user.name %>
    </div>
    <div class="date">
      <%= l message.created_at %>
    </div>
  </div>
  <div class="message">
    <%= message.content %>
  </div>
  <%= image_tag message.image.variant(resize:'500x500'), class: 'message-image' if message.image.attached? %>
</div>